rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Teachers can read/write their own courses, students can read all courses
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;
    }
    
    // Quizzes are readable by authenticated users, writable by course teachers
    match /quizzes/{quizId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        get(/databases/$(database)/documents/courses/$(request.resource.data.courseId)).data.teacherId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.teacherId == request.auth.uid;
    }
    
    // Results are readable by the student and course teacher
    match /results/{resultId} {
      allow read: if request.auth != null && 
        (resource.data.studentId == request.auth.uid ||
         get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.teacherId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.studentId == request.auth.uid;
    }
    
    // Resources are readable by all authenticated users
    match /resources/{resourceId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null; // Adjust based on your needs
    }
    
    // Lesson Progress - Students can read/write their own progress
    match /lessonProgress/{progressId} {
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.studentId == request.auth.uid;
    }
    
    // Study Notes - Students can read/write their own notes
    match /studyNotes/{noteId} {
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.studentId == request.auth.uid;
    }
    
    // Study Plans - Students can read/write their own study plans
    match /studyPlans/{planId} {
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.studentId == request.auth.uid;
    }
    
    // PDF Documents - Students can read/write their own PDF documents
    match /pdfDocuments/{docId} {
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.studentId == request.auth.uid;
    }
    
    // Chat History - Students can read/write their own chat history
    match /chatHistory/{chatId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // General Chat History - Students can read/write their own general chat history
    match /generalChatHistory/{chatId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
  }
}
